<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/onboardingOne"
        android:name="com.example.pregnancy_app.ui.OnboardingOne"
        android:label="OnboardingOne"
        tools:layout="@layout/onboarding1_list_layout">
        <action
            android:id="@+id/action_onboardingOne_to_onboardingTwo"
            app:destination="@id/onboardingTwo" />
    </fragment>
    <fragment
        android:id="@+id/onboardingTwo"
        android:name="com.example.pregnancy_app.ui.OnboardingTwo"
        android:label="OnboardingTwo"
        tools:layout="@layout/onboarding2_layout_resource_file">
        <action
            android:id="@+id/action_onboardingTwo_to_loginScreen"
            app:destination="@id/loginScreen" />
        <action
            android:id="@+id/action_onboardingTwo_to_onboardingOne"
            app:destination="@id/onboardingOne" />
    </fragment>
    <fragment
        android:id="@+id/loginScreen"
        android:name="com.example.pregnancy_app.ui.LoginScreen"
        android:label="LoginScreen"
        tools:layout="@layout/login_screen_fragment">
        <action
            android:id="@+id/action_loginScreen_to_onboardingTwo"
            app:destination="@id/onboardingTwo" />
        <action
            android:id="@+id/action_loginScreen_to_beginningScreenFragment"
            app:destination="@id/beginningScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/beginningScreenFragment"
        android:name="com.example.pregnancy_app.beginningScreenFragment"
        android:label="fragment_beginning_screen"
        tools:layout="@layout/fragment_beginning_screen" >
        <action
            android:id="@+id/action_beginningScreenFragment_to_loginScreen"
            app:destination="@id/loginScreen" />
        <action
            android:id="@+id/action_beginningScreenFragment_to_weekListFragment"
            app:destination="@id/weekListFragment" />
    </fragment>
    <fragment
        android:id="@+id/weekListFragment"
        android:name="com.example.pregnancy_app.WeekListFragment"
        android:label="fragment_week_list"
        tools:layout="@layout/fragment_week_list" >
        <action
            android:id="@+id/action_weekListFragment_to_beginningScreenFragment"
            app:destination="@id/beginningScreenFragment" />
        <action
            android:id="@+id/action_weekListFragment_to_dayListFragment"
            app:destination="@id/dayListFragment" />
    </fragment>
    <fragment
        android:id="@+id/dayListFragment"
        android:name="com.example.pregnancy_app.DayListFragment"
        android:label="fragment_day_list"
        tools:layout="@layout/fragment_day_list" >
        <action
            android:id="@+id/action_dayListFragment_to_weekListFragment"
            app:destination="@id/weekListFragment" />
        <action
            android:id="@+id/action_dayListFragment_to_affirmationDisplayFragment"
            app:destination="@id/affirmationDisplayFragment" />
    </fragment>
    <fragment
        android:id="@+id/affirmationDisplayFragment"
        android:name="com.example.pregnancy_app.AffirmationDisplayFragment"
        android:label="fragment_affirmation_display"
        tools:layout="@layout/fragment_affirmation_display" >
        <action
            android:id="@+id/action_affirmationDisplayFragment_to_dayListFragment"
            app:destination="@id/dayListFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.pregnancy_app.ui.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_onboardingOne"
            app:destination="@id/onboardingOne" />
    </fragment>
</navigation>